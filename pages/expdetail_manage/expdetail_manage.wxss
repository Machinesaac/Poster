.show-detail-container{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 750rpx;
}

.show-detail-title{
  display: flex;
  width: 690rpx;
  background-color: #229dfe;
  color: white;
  border-radius: 30rpx;
  height: 300rpx;
  margin-top: 50rpx;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}

.show-index{
  font-size: 30rpx;
  font-weight: bolder;
}

.show-type{
  font-size: 60rpx;
  font-weight: bold;
}

.show-title{
  margin-top: 40rpx;
  font-size: 25rpx;
  margin-bottom: 10rpx;
  color: #aaa;
}

.show-contect{
  font-size: 40rpx;
  color: #229dfe;
  font-weight: bolder;
}

.other-contect-border{
  display: flex;
  flex-direction: row;
  color: #aaa;
  margin-top: 60rpx;
  align-items: center;
  justify-content: center;
}

.border{
  display: flex;
  width: 100rpx;
  height: 3rpx;
  background-color: #aaa;
}

.border-contect-title{
  font-size: 20rpx;
  color: #aaa;
  margin-left: 10rpx;
  margin-right: 10rpx;
}